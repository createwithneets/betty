<% if is_logged_in? %>
<h2><%= link_to 'Proceed to Bettyland here', bettyland_path %></h2>
<% else %>
<div class="login">
<h1>Login to Bettyland 🍑</h1>
<p>Have a Betty account? Login below.<br>
Forgot your password? Email us at hello@inbedwithbetty.com</p>
<div class="loginform">
<%= simple_form_for :session, url: session_path do |f| %>
<%= f.input :ig_username %>
<%= f.input :password %>
<%= f.button :submit, "Log in" %>
<% end %>
</div>
</div>
<% end %>
