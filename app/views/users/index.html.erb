  <%= form_tag users_path, :method => 'get', :id => 'users_search' do %>
      <p>
          <%= text_field_tag :search, params[:search], placeholder: 'Search by Username' %>
                    <%= submit_tag "Find a Betty", :name => nil %>
                          <%= link_to "Clear Search", users_path %></p>
  <% end %></div></div>
<section class="allusers">
<% @users. each do |user| %>
<div class="individualuser"><p>
  <div class="square"></div>
  <div class="square2"></div>
  <%= link_to  user_path(user.ig_username) do %>
  <div class="userphoto"><%= image_tag user.photo.thumb.url %></div>
  <div class="usergif"><%= image_tag user.photogif.thumb.url %></div>
  <div class="username"><h3 style="background-color: #eeddcc">&nbsp;<%= user.ig_username %>&nbsp;</h3></div>
  </div>
<% end %>
<% end %>
</section>
</div>
<section class="paginateusers"><div class="paginationusers"><%= will_paginate @users, :page_links => false %></div></section>



<footer id="footernav">
